{% extends 'VizitkaShopBundle:Admin:base.html.twig' %}

 {% block body %}

    <div class="adm-menu">
    <span><a href="/shop/admin/">Админка</a></span>
    <span><a href="/shop/admin/products/">Товары</a></span>
    <span><a href="/shop/admin/categories/">Категории</a></span>
    <span><a href="/shop/admin/brands/">Бренды</a></span>
    <span><a href="/shop/admin/features/">Свойства</a></span>
    <span><a href="/shop/admin/orders/">Заказы</a></span>
    <span><a href="/shop/admin/settings/">Настройки</a></span>
    <span class="right"><a href="/shop/" target="_blank">магазин</a></span>
    </div>


<div>

    <form action="{{ path(path) }}" method="post" enctype="multipart/form-data"  >

        <input type="hidden" name="category_form[id]" required="required" value="{{category['id']|default("")}}">
        
        <div><label>Название категории</label>
           <input type="text" name="category_form[name]" required="required" value="{{category['name']|default("")}}">
        </div>
        
        <div><label>Родительскя категория</label>
             {{ category['parent_id']|default("")|tree('category_form[parent_id]','VizitkaShopBundle:CategoriesShop')|raw}}
        </div>
        
        <div><label>meta title</label>
           <input type="text" name="category_form[meta_title]" required="required" value="{{category['meta_title']|default("")}}">
        </div>

        <div><label>meta keywords</label>
           <input type="text" name="category_form[meta_keywords]" required="required" value="{{category['meta_keywords']|default("")}}">
        </div>
        
        <div><label>meta description</label>
           <input type="text" name="category_form[meta_description]" required="required" value="{{category['meta_description']|default("")}}">
        </div>
        
        <div><label>description</label>
           <input type="text" name="category_form[description]" required="required" value="{{category['description']|default("")}}">
        </div>
        
        <div><label>url</label>
           <input type="text" name="category_form[url]" required="required" value="{{category['url']|default("")}}">
        </div>
        
        <div><label>Активно</label>
             {{ category['visible']|default("")|checkbox('category_form[visible]')|raw}}
        </div>
        
        <div><label></label>
        <input type="file" name="file">
        </div>
            
        <input type="submit" value="Оновить" />
     </form>
    
</div>



 {% endblock %}