{% extends 'VizitkaShopBundle:Admin:base.html.twig' %}

 {% block body %}

    <div class="adm-menu">
    <span><a href="/shop/admin/">Админка</a></span>
    <span><a href="/shop/admin/products/">Товары</a></span>
    <span><a href="/shop/admin/categories/">Категории</a></span>
    <span><a href="/shop/admin/brands/">Бренды</a></span>
    <span><a href="/shop/admin/features/">Свойства</a></span>
    <span><a href="/shop/admin/orders/">Заказы</a></span>
    <span><a href="/shop/admin/settings/">Настройки</a></span>
    <span class="right"><a href="/shop/" target="_blank">магазин</a></span>
    </div>


<div>

    <form action="{{ path(path) }}" method="post" enctype="multipart/form-data">
    
         <input type="hidden" name="product_form[id]" required="required" value="{{product['id']|default("")}}">
      
        <div><label>Название продукта</label>
            {% if error['name'] is defined %}<li class="error">{{error['name']}}</li>{% endif %}
           <input type="text" name="product_form[name]" required="required" value="{{product['name']|default("")}}">
        </div>
        
       <div><label>Адрес</label>
            {% if error['url'] is defined %}<li class="error">{{error['url']}}</li>{% endif %}
           <input type="text" name="product_form[url]" required="required"  value="{{product['url']|default("")}}">
        </div>
         
        <div><label>Брэнд</label>
         {{ product['brand_id']|default("")|select('product_form[brand_id]','VizitkaShopBundle:BrandsShop')|raw}}
        </div>
         
       <div><label>Категория</label>
           {{ product['category_id']|default("")|tree('product_form[category_id]','VizitkaShopBundle:CategoriesShop')|raw}}
        </div> 
        
        <div><label>Цена</label>
           <input type="text" name="product_form[price]" required="required" value="{{product['price']|default("")}}">
        </div> 
         
        <div><label>Артикул</label>
           <input type="text" name="product_form[sku]" required="required" value="{{product['sku']|default("")}}">
        </div> 
       
        <div><label>Краткое описание</label>
            <textarea name="product_form[annotation]" >{{product['annotation']|default("")}}</textarea>
        </div> 
         
        <div><label>Полное описание</label>
           <textarea name="product_form[body]" >{{product['body']|default("")}}</textarea>
        </div> 
         
         <div>
             <label>Активно</label>
             {{ product['visible']|default("")|checkbox('product_form[visible]')|raw}}
         </div>
         
        <div><label>Meta title</label>
           <input type="text" name="product_form[meta_title]" required="required" value="{{product['meta_title']|default("")}}">
        </div> 
         
        <div><label>Meta keywords</label>
           <input type="text" name="product_form[meta_keywords]" required="required" value="{{product['meta_keywords']|default("")}}">
        </div> 
         
        <div><label>Meta description</label>
           <input type="text" name="product_form[meta_description]" required="required" value="{{product['meta_description']|default("")}}">
        </div>   
         
         
        <div>
        <input type="file" name="filename" multiple>
        </div>
        
        
        
       <input type="submit" value="Отправить" />
     </form>
    
</div>



 {% endblock %}